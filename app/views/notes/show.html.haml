.wrapper_show
  .wrapper.title
    %h1= simple_format(@note.title)
  .wrapper_title
    %p= simple_format(@note.content)

  %br
  .wrapper_tool
    .tool
      = link_to notes_path do
        %i.fa.fa-file-text-o
        Show All
    .tool
      = link_to edit_note_path(@note) do
        %i.fa.fa-pencil-square-o
        Edit Note
    .tool
      = link_to note_path(@note), method: :delete, data: { confirm: "Are you sure you want to delete?" } do
        %i.fa.fa-trash-o
        Delete
