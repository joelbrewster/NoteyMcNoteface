.note_container
  - unless @notes.blank?
    - @notes.each do |note|
      %a{ href: (url_for [note])}
      .note
        %h2= link_to note.title, note
        %p= simple_format(note.content)
        .weather
          %p= @forecast
        .date
          %p.date= time_ago_in_words(note.created_at)
  - else
    .wrapper_show
      %p Create a new note by clicking "New Note".
