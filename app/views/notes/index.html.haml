.note_container
  - unless @notes.blank?
    - @notes.each do |note|
      %a{ href: (url_for [note])}
        .note
          %p.title= note.title
          %p= simple_format(note.content)
          .date
            %p.date= time_tag(note.updated_at)
  - else
    .wrapper_show
      %h2 Create a new note by clicking "New Note".
      .httparty_quotes
        %br
        - for i in 0..2
          = @quote[i]['content'].html_safe
