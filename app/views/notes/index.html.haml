%p= @forecast
.note_container
  - unless @notes.blank?
    - @notes.each do |note|
      %a{ href: (url_for [note])}
      .note
        %h2= link_to note.title, note
        %p= simple_format(note.content)
        .date
          %p.date= time_ago_in_words(note.created_at)
  - else
    %h2 Add a note
    %p Create a new note
